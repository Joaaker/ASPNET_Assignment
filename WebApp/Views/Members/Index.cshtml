@model IEnumerable<MembersViewModel>

@{
    ViewData["Title"] = "Members";
}

<partial name="Partials/Members/_AddMemberForm" model="new AddMemberViewModel()" />
<partial name="Partials/Members/_EditMemberForm" model="new EditMemberViewModel()" />

<div class="top-bar">
    <h1>Team Members</h1>
    <button class="btn-base btn-blue" type="button" data-modal="true" data-target="#add-member-modal" data-member-id="@Model">
        <i class="fa-solid fa-plus"></i>
        <span>Add Team Member</span>
    </button>
</div>

<section class="member-section">

    @foreach (var member in Model)
        @await Html.PartialAsync("Partials/Members/_MemberCard", member)

</section>