@model SignInViewModel
@{
	Layout = "~/Views/Shared/_Auth_Layout.cshtml";
	ViewData["Title"] = "Sign in";
}

<h1>Login</h1>
<button>PARTIAL Sign Up With Google</button>
@await Html.PartialAsync("Partials/Components/_OrDivider")


<form class="auth-form" method="post" asp-controller="Auth" asp-action="SignIn" novalidate>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <div class="field-group">
            <input asp-for="Email" class="form-control text-input">
            <span asp-validation-for="Email"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <div class="field-group">
            <input asp-for="Password" class="form-control text-input">
            <span asp-validation-for="Password"></span>
        </div>
    </div>

    <div class="form-check">
        <input asp-for="RememberMe" class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
        <label asp-for="RememberMe" class="form-check-label" for="flexCheckDefault"></label>
    </div>

    <button type="submit" class="btn-base btn-blue">Create Account</button>

</form>

<div class="auth-redirect">
    <p class="auth-text">Don't have an account?</p>
    <a asp-controller="Auth" asp-action="SignUp">
        <span class="a-text">Sign Up</span>
    </a>
</div>

