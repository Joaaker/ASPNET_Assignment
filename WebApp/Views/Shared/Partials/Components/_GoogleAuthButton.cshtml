@{
    var viewDataTitle = ViewData["Title"] as string ?? "Sign in";
}

<form asp-controller="Auth" asp-action="ExternalSignIn" method="post" class="external-account" novalidate>
    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

    <button type="submit" name="provider" value="Google" class="btn-external btn-google">@viewDataTitle with Google</button>
</form>
