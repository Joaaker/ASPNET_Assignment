@{
    // Generated by ChatGPT-03-high - Sets id based on ViewData sent from parent
    string toggleId = "dark-mode";

    if (ViewData["ToggleContext"]?.ToString() == "HamburgerMenu")
    {
        toggleId = "hamburger-dark-mode";
    }
}

<div class="dark-mode-container">
    <div class="cog-span">
        @await Html.PartialAsync("Partials/Navbar/_Cogwheel")
        <span>Dark Mode</span>
    </div>
    <div class="dark-mode-toggle">
        <input type="checkbox" id="@toggleId" class="toggle-checkbox" onchange="handleToggleChange()" />
        <label for="@toggleId" class="toggle-label" aria-label="Dark mode toggle button"></label>
    </div>
</div>
